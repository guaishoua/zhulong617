<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.youth.banner.Banner
        android:id="@+id/banner"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"/>
    <LinearLayout
        android:id="@+id/content"
        app:layout_constraintTop_toBottomOf="@id/banner"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="@dimen/dp_12"
            android:drawableTop="@drawable/ic_shortcuts_1"
            android:layout_width="wrap_content"
            android:text="训练营"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:drawablePadding="@dimen/dp_8"
            android:layout_margin="@dimen/dp_12"
            android:drawableTop="@drawable/ic_shortcuts_6"
            android:layout_width="wrap_content"
            android:text="图片库"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:drawablePadding="@dimen/dp_8"
            android:layout_margin="@dimen/dp_12"
            android:drawableTop="@drawable/ic_shortcuts_3"
            android:layout_width="wrap_content"
            android:text="论坛"
            android:layout_height="wrap_content"/>
        <TextView
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:layout_margin="@dimen/dp_12"
            android:drawableTop="@drawable/ic_shortcuts_4"
            android:layout_width="wrap_content"
            android:text="问答"
            android:layout_height="wrap_content"/>
        <TextView
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:layout_margin="@dimen/dp_12"
            android:drawableTop="@drawable/ic_shortcuts_5"
            android:layout_width="wrap_content"
            android:text="礼品"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <View
        android:id="@+id/home_line"
        android:background="@drawable/home_line"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/content"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/live_view"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/home_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <view
           android:background="@color/question"
            android:layout_marginTop="@dimen/dp_12"
            android:id="@+id/live_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_height="@dimen/dp_15"/>
        <TextView
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/live_line"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直播专区"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部直播"
            android:drawablePadding="@dimen/dp_7"
            android:drawableRight="@drawable/ic_arrow_right_gray"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        app:layout_constraintTop_toBottomOf="@id/live_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>