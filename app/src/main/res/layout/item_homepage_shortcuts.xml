<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="@dimen/dp_8"
            android:drawableTop="@drawable/ic_shortcuts_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="训练营"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:drawablePadding="@dimen/dp_8"
            android:layout_margin="@dimen/dp_8"
            android:drawableTop="@drawable/ic_shortcuts_6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="图片库"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:drawablePadding="@dimen/dp_8"
            android:layout_margin="@dimen/dp_8"
            android:drawableTop="@drawable/ic_shortcuts_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="论坛"
            android:layout_height="wrap_content"/>
        <TextView
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:layout_margin="@dimen/dp_8"
            android:drawableTop="@drawable/ic_shortcuts_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="问答"
            android:layout_height="wrap_content"/>
        <TextView
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:layout_margin="@dimen/dp_8"
            android:drawableTop="@drawable/ic_shortcuts_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="礼品"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:id="@+id/home_line"
        android:background="@drawable/home_line"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/content"
        />
</LinearLayout>