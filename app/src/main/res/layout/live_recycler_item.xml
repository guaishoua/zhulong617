<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/live_view"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/home_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/red2e"
            android:layout_marginTop="@dimen/dp_12"
            android:id="@+id/live_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_height="@dimen/dp_15"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/live_line"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIP直播"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部直播"
            android:drawablePadding="@dimen/dp_7"
            android:drawableRight="@drawable/ic_arrow_right_gray"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        app:layout_constraintTop_toBottomOf="@id/live_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/views"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/question"
        app:layout_constraintTop_toBottomOf="@+id/zhibo"
        />
</LinearLayout>